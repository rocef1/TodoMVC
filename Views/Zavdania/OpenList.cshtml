@model TodoMVC.Models.Zavdania

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white text-center">
            <h2>Відкрити список завдань</h2>
        </div>
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form asp-action="ConfirmOpenList" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="filePath">Шлях до файлу:</label>
                    <input type="text" name="filePath" id="filePath" class="form-control" placeholder="Введіть шлях до файлу" />
                </div>
                <div class="form-group mt-3">
                    <label for="uploadedFile">Або завантажте файл:</label>
                    <input type="file" name="uploadedFile" id="uploadedFile" class="form-control" />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-upload"></i> Завантажити
                    </button>
                    <a href="@Url.Action("TaskList", "Zavdania")" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Скасувати
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
