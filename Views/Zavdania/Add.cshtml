@model TodoMVC.Models.Zavdania

<div class="container mt-4">
    <h2 class="text-center text-primary">Додати нове завдання</h2>

    <div class="card shadow-sm p-4">
        <form asp-action="Add" method="post">
            <div class="form-group">
                <label for="Title" class="font-weight-bold">Назва:</label>
                <input type="text" id="Title" name="Title" class="form-control" required placeholder="Введіть назву завдання" />
            </div>

            <div class="form-group">
                <label for="Description" class="font-weight-bold">Опис:</label>
                <textarea id="Description" name="Description" class="form-control" rows="3" placeholder="Введіть опис (необов'язково)"></textarea>
            </div>

            <div class="form-group">
                <label for="Priority" class="font-weight-bold">Пріоритет:</label>
                <input type="number" id="Priority" name="Priority" class="form-control" min="1" max="10" placeholder="Введіть пріоритет (1-10)" />
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="glyphicon glyphicon-ok"></i> Додати завдання
                </button>
            </div>
        </form>
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "Zavdania")" class="btn btn-secondary">
            <i class="glyphicon glyphicon-arrow-left"></i> Повернутися до списку
        </a>
    </div>
</div>
